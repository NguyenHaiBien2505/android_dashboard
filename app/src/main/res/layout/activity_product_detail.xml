<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề THÔNG TIN SẢN PHẨM -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN\nSẢN PHẨM"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#333333"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="66dp"/>

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:background="#E0E0E0"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Card chứa thông tin sản phẩm -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Mã sản phẩm -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvMaSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SP001"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Tên sản phẩm -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTenSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iPhone 14 Pro"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Mô tả -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvMoTa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điện thoại flagship của Apple"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:minHeight="60dp" />

                <!-- Giá bán -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá bán"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvGiaBan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="27.990.000 VNĐ"
                    android:textSize="14sp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Số lượng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Danh mục -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh mục"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDanhMuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điện thoại"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Ngày tạo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNgayTao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nút OK -->
        <Button
            android:id="@+id/btnOK"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="OK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>