<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header chứa icon user và tiêu đề ngang hàng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="66dp">

        <!-- Tiêu đề ứng dụng -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ HỆ THỐNG"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_centerInParent="true" />

        <!-- Icon user góc trên bên phải -->
        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_user"
            android:contentDescription="User icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </RelativeLayout>

    <!-- Quản lý tài khoản -->
    <TextView
        android:id="@+id/tvQuanLyTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_item_bg"
        android:text="Quản lý tài khoản"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Quản lý bộ sưu tập -->
    <TextView
        android:id="@+id/tvQuanLyBoSuuTap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_item_bg"
        android:text="Quản lý bộ sưu tập"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Quản lý danh mục -->
    <TextView
        android:id="@+id/tvQuanLyDanhMuc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_item_bg"
        android:text="Quản lý danh mục"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Quản lý sản phẩm -->
    <TextView
        android:id="@+id/tvQuanLySanPham"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_item_bg"
        android:text="Quản lý sản phẩm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Thống kê, báo cáo -->
    <TextView
        android:id="@+id/tvThongKeBaoCao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_item_bg"
        android:text="Thống kê, báo cáo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

</LinearLayout>